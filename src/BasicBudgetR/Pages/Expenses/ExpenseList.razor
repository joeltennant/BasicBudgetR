@using BasicBudgetR.Core.Models;
@using BasicBudgetR.Pages.Expenses.Components;
@using BasicBudgetR.Server.Application.Handlers.Expenses;
@inject ISnackbar Snackbar
@inject IDialogService DialogService
@page "/expenses"

<MudGrid>
    <MudItem xs="12">
        <MudPaper Elevation="25" Style="@($"color:{Colors.Shades.White};background-color:{Colors.Purple.Darken4}")">
            <MudToolBar>
                <MudText Typo="Typo.h5" Class="pr-3">Expenses</MudText>
                @* <MudIconButton Icon="@Icons.Material.Outlined.Edit" /> *@
                @* <MudIconButton Icon="@Icons.Material.Outlined.Remove" Color="Color.Inherit" /> *@
                <MudSpacer />
                <MudIconButton Icon="@Icons.Material.Outlined.Add" Href="/expenses/add" Color="Color.Info" />
            </MudToolBar>
        </MudPaper>
    </MudItem>
    <MudItem xs="6">
        <MudTable Items="@Expenses" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@_loading" LoadingProgressColor="Color.Info">
            <HeaderContent>
                <MudTh>Name</MudTh>
                <MudTh>Amount</MudTh>
                <MudTh>IsActive</MudTh>
                <MudTh>Actions</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Name">@context.Name</MudTd>
                <MudTd DataLabel="Amount">@context.Amount</MudTd>
                <MudTd DataLabel="IsActive">@context.IsActive</MudTd>
                <MudTd DataLabel="Actions">
                    <MudIconButton Icon="@Icons.Material.Filled.OpenInNew" aria-label="View"
                                   Href="@($"/expenses/detail/{@context.ExpenseId}")" />
                    <MudButton Variant="Variant.Text" Color="Color.Error" OnClick="@((e) => DeleteExpense(@context.Name,@context.ExpenseId))">Delete</MudButton>
                </MudTd>
            </RowTemplate>
        </MudTable>
    </MudItem>
</MudGrid>

@code {
    private bool _hidePosition;
    private bool _loading;
    public IEnumerable<ExpenseModel> Expenses = new List<ExpenseModel>();

    protected override async Task OnInitializedAsync()
    {
        await GetExpenses();
    }

    private async Task GetExpenses()
    {
        _loading = true;
        var result = await _mediator.Send(new AllExpenses.Request());

        if (result.IsSuccess)
        {
            Expenses = result.Value;
        }
        else
        {
            Snackbar.Add("Your expenses cannot be loaded at this time.", Severity.Error);
        }
        _loading = false;
    }

    protected async Task DeleteExpense(string name, long expenseId)
    {
        var parameters = new DialogParameters<DeleteExpenseDialog>
        {
            { x => x.Name, name },
        };

        var dialog = await DialogService.ShowAsync<DeleteExpenseDialog>("Delete Expense", parameters);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            var deleteResult = await _mediator.Send(new DeleteExpense.Request(expenseId));
            if (deleteResult.IsSuccess)
            {
                Snackbar.Add($"Expense {name} deleted.", Severity.Success);
                await GetExpenses();
            }
            else
            {
                Snackbar.Add("Cannot delete expense.", Severity.Error);
            }
        }
    }
}
